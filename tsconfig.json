{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "CommonJS",

    "allowJs": true,
    "checkJs": true,

    "strict": true,

    "outDir": "./dist",
    "noEmit": true,
    "removeComments": true,

    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,

    "baseUrl": "./",
    "paths": {
      "~/*": ["src/*"]
    }
  },
  "include": ["src", "tsup.config.ts"]
}
